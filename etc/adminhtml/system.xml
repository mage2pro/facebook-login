<?xml version='1.0'?>
<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../../../Magento/Config/etc/system_file.xsd'
>
    <system>
        <!--
            2015-07-10
            Минимальная длина идентификатора tab — 3 символа:
            https://github.com/magento/magento2/blob/1.0.0-beta/app/code/Magento/Config/etc/system_file.xsd#L405
            Поэтому ставим символ подчёркивания вначале.
        -->
        <tab id='_df' translate='label' sortOrder='-100'>
            <label>Mage2.PRO</label>
        </tab>
        <!--
            2015-09-25
            Первые 2 цифры sortOrder соответствуют порядковому номеру первой буквы модуля
            в английском алфавите: https://en.wikipedia.org/wiki/English_alphabet
        -->
        <section
            id='dfe_login'
            translate='label'
            type='text'
            sortOrder='120'
            showInDefault='1'
            showInWebsite='1'
            showInStore='1'
        >
            <tab>_df</tab>
            <label>Login</label>
            <class>separator-top</class>
            <!--
                2015-10-05
                https://mage2.pro/t/114
            -->
            <resource>Dfe_Login::config</resource>
            <!--
                2015-09-25
                Первые 2 цифры sortOrder соответствуют порядковому номеру первой буквы модуля
                в английском алфавите: https://en.wikipedia.org/wiki/English_alphabet
            -->
            <group
                id='facebook'
                translate='label'
                type='text'
                sortOrder='60'
                showInDefault='1'
                showInWebsite='1'
                showInStore='1'
            >
                <label>Facebook</label>
                <field
                    id='enable'
                    translate='label'
                    type='select'
                    sortOrder='1'
                    showInDefault='1'
                    showInWebsite='1'
                    showInStore='1'
                >
                    <label>Enable?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment><![CDATA[]]></comment>
                </field>
                <field
                    id='app_id'
                    translate='label'
                    type='text'
                    sortOrder='2'
                    showInDefault='1'
                    showInWebsite='1'
                    showInStore='1'
                >
                    <label>App ID</label>
                    <comment><![CDATA[<a href="https://discourse.pro/t/15">how to get it?</a>]]></comment>
                    <depends><field id='enable'>1</field></depends>
                </field>
                <field
                    id='app_secret'
                    translate='label'
                    type='obscure'
                    sortOrder='3'
                    showInDefault='1'
                    showInWebsite='1'
                    showInStore='1'
                >
                    <label>App Secret</label>
                    <comment><![CDATA[<a href="https://discourse.pro/t/15">how to get it?</a>]]></comment>
                    <depends><field id='enable'>1</field></depends>
                </field>
            </group>
        </section>
    </system>
</config>